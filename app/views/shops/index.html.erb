<h1>Shops#index</h1>



<%@shoplist.each do |shop|%>
    <% case @language %>
    <% when 'Japanese' %>
        <%= shop.japanese_name %>
    <% when 'English' %>
        <%= shop.english_name %>
    <% end %>

<%end%>
<p>Find me in app/views/shops/index.html.erb</p>

